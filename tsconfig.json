{
  "compilerOptions": {
    "module": "es6",
    "lib": [
      "es5",
      "es2017",
      "dom"
    ],
    "target": "es5",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "outDir": "lib",
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node",
      "ws"
    ]
  },
  "include": [
    "src/**/*"
  ]
}